<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="com.example.usuario.cheasytaxi.Practicas">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/road2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Alarm Manager"
                android:id="@+id/btnAlarm"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textAlignment="viewStart" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Android Plot"
                android:drawableLeft="@drawable/check"

                android:id="@+id/btnPlot"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Proximidad"
                android:id="@+id/btnProximidad"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Reconocimiento de Voz"
                android:id="@+id/btnUsoVoz"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Sensores"
                android:drawableLeft="@drawable/check"
                android:id="@+id/btnSensores"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Sockets"
                android:id="@+id/btnSockets"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Usando Touch"
                android:id="@+id/btnTouch"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textAlignment="inherit" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Tabs"
                android:id="@+id/btnTabs"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textAlignment="viewStart" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Gridview"
                android:id="@+id/btnGrid"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textAlignment="viewStart" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usando Listview"
                android:id="@+id/btnList"
                android:drawableLeft="@drawable/check"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
