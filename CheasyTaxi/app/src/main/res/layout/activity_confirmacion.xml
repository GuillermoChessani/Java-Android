<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.mapas.Confirmacion"
    android:background="@drawable/road2"
    android:id="@+id/layourt">

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:scrollbars="vertical"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/fondo"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtOperador"
        android:layout_alignTop="@+id/map"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Operador: "
        android:id="@+id/txtTaxista"
        android:drawableLeft="@drawable/operador"
        android:drawablePadding="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MatrÃ­cula: "
        android:id="@+id/txtMatricula"
        android:drawableLeft="@drawable/matricula"
        android:drawablePadding="7dp"
        android:layout_below="@+id/txtTaxista"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modelo: "
        android:drawableLeft="@drawable/modelo"
        android:drawablePadding="7dp"
        android:id="@+id/txtModelo"
        android:layout_below="@+id/txtMatricula"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Color: "
        android:id="@+id/txtColor"
        android:drawableLeft="@drawable/color"
        android:drawablePadding="7dp"
        android:layout_below="@+id/txtModelo"
        android:layout_alignStart="@+id/VtxtModelo" />


</RelativeLayout>
