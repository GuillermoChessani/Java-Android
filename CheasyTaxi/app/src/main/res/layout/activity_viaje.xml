<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/road2"
    tools:context="com.example.usuario.cheasytaxi.Viaje">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cliente: "
        android:drawableLeft="@drawable/usuario"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtNombreC"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Operador: "
        android:id="@+id/VtxtNombreO"
        android:drawableLeft="@drawable/operador"
        android:drawablePadding="5dp"
        android:layout_below="@+id/VtxtNombreC"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Matricula:"
        android:drawableLeft="@drawable/matricula"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtMatricula"
        android:layout_below="@+id/VtxtNombreO"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Unidad:"
        android:drawableLeft="@drawable/icon4"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtUnidad"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VtxtMatricula"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modelo:"
        android:drawableLeft="@drawable/modelo"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtModelo"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VtxtUnidad"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Color:"
        android:drawableLeft="@drawable/color"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtColor"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VtxtModelo"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resumen de la Corrida"
        android:id="@+id/textView21"
        android:drawableLeft="@drawable/icon2"
        android:drawablePadding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distancia:"
        android:drawableLeft="@drawable/ciudad"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtDistancia"
        android:layout_below="@+id/VtxtFecha"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DuraciÃ³n:"
        android:drawableLeft="@drawable/duracion"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtDuracion"
        android:layout_below="@+id/VtxtPrecio"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Precio:"
        android:drawableLeft="@drawable/precio"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtPrecio"
        android:layout_below="@+id/VtxtDistancia"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha:"
        android:drawableLeft="@drawable/fecha"
        android:drawablePadding="5dp"
        android:id="@+id/VtxtFecha"
        android:layout_below="@+id/VtxtColor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar"
        android:id="@+id/btnTerminar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
